{% assign mail = "" %}
{% assign telephone = "" %}

{% if section.settings.mail == "" %}
    {% assign mail = shop.email %}
    {% else %}
    {% assign mail = section.settings.mail %}
{% endif %}

{% if section.settings.telephone == "" %}
    {% assign telephone = shop.phone %}
    {% else %}
    {% assign telephone = section.settings.telephone %}
{% endif %}

<style>
    form input::placeholder, form textarea::placeholder {
        color: black;
        font-weight: 300;
    }
</style>

<section>
    <div class="mx-auto">
        <div class="w-full">
            <div>
                {% form 'contact' %}
                    {% if form.errors %}
                        <div class="border p-5">
                            <div class="flex flex-row items-center w-full my-3">
                                <div class="text-red-500">
                                    {% render 'icon-failed' %}
                                </div>
                                <div class="text-sm font-medium ml-3">
                                    Oh no! Your message is not sent
                                </div>
                            </div>
                            <ul class="px-4 mb-3 ml-7 list-decimal">
                                {% for error in form.errors %}
                                    <li>
                                        <span>{{ form.errors.messages[error] }}</span>
                                    </li>
                                {% endfor %}
                            </ul>
                        </div>
                    {% elsif form.posted_successfully? %}
                        <div class="flex flex-row items-center w-full my-3 p-5">
                            <div class="text-green-500">
                                {% render 'icon-success' %}
                            </div>
                            <div class="text-sm font-medium ml-3">Your message is sent successfully</div>
                        </div>
                    {% endif %}


                    <div class="mx-auto flex-1">
                        <div class="flex mb-3">
                            <div class="pr-3 md:w-1/2">
                                <label class="uppercase text-xs text-grey font-heading" for="contact_name">Name</label>
                                <input class="border py-3 px-4 mb-3 text-gray-700 w-full" type="text" name="contact[name]" id="contact_name">
                            </div>
                            <div class="pr-3 md:w-1/2">
                                <label class="uppercase text-xs text-grey font-heading" for="contact_email">Email address</label>
                                <input class="border py-3 px-4 mb-3 text-gray-700 w-full" type="email" name="contact[email]" id="contact_email">
                            </div>
                        </div>
            
                        <div class="flex mb-3">
                            <div class="w-full pr-3">
                                <label class="uppercase text-xs text-grey font-heading" for="contact_message">Message</label>
                                <textarea class="border py-3 px-4 mb-3 text-gray-700 w-full" name="contact[body]" id="contact_message"></textarea>
                            </div>
                        </div>
            
                        <div class="flex px-1 mb-3">
                            <div class="w-full px-3">
                                <input type="submit" class="relative flex items-center font-heading font-light bg-white border-yellow border-2 text-black text-[13px] text-base rounded-[40px] py-[15px] px-[25px] text-center tracking-wide uppercase group transition mx-auto" value="Submit message">
                            </div>
                        </div>
                    </div>       
                {% endform %}
            </div>
        </div>
    </div>
</section>