{% if btn-style == "white" %}
    {% assign btn-class = "bg-white border-yellow border-2 text-black" %}
{% elsif btn-style == "black" %}
    {% assign btn-class = "bg-black" %}
{% endif %}

<a href="{{ url }}" class="relative flex items-center {{ btn-class }} text-[14px] text-base rounded-[40px] py-[15px] px-[25px] text-center tracking-wide uppercase group transition">
    <span class="leading-none mx-auto">{{ text }}</span>
    {% comment %} <span class="absolute right-4 group-hover:translate-x-1 group-focus:translate-x-1 transition">{% render 'icon-chevron-right', size: "1em" %}</span> {% endcomment %}
</a>
