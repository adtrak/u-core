<div class="w-full card">
  <a href="{{ product_product.url }}" class="relative block">
    <div class="card-image bg-lightgrey overflow-hidden h-full">
    
        {% if product_product.featured_image %}
          <div class="w-full overflow-hidden aspect-[4/3] pr-6 pb-6">
            <img
              class="w-full h-full object-cover"
              src="{{ product_product.featured_image | img_url: 'large' }}"
              alt="{{ product_product.featured_image.alt }}">
          </div>

        {% else %}
          {{ 'product-1' | placeholder_svg_tag: 'w-full object-cover bg-gray-100' }}
        {% endif %}
    
    </div>

    <div class="card-text">

      <div class="flex flex-col p-4">
        <p class="text-gray-700 font-heading uppercase font-medium text-xl">{{ product_product.title }}</p>
        <p class="text-midgrey font-heading ">{{ product_product.price | money }}</p>
      </div>

    </div>
  </a>
</div>