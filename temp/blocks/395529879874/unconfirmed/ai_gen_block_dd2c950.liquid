    }

    .ai-hero-slideshow__buttons-{{ ai_gen_id }} {
      justify-content: {{ block.settings.mobile_text_alignment }};
    }
  }
{% endstyle %}

<hero-slideshow-{{ ai_gen_id }}
  class="ai-hero-slideshow-{{ ai_gen_id }}"
  data-autoplay-speed="{{ block.settings.autoplay_speed }}"
  {{ block.shopify_attributes }}
>
  <div class="ai-hero-slideshow__slides-{{ ai_gen_id }}">
    {% for i in (1..3) %}
      {% liquid
        assign slide_enabled_key = 'slide_' | append: i | append: '_enabled'
        assign desktop_image_key = 'slide_' | append: i | append: '_desktop_image'
        assign mobile_image_key = 'slide_' | append: i | append: '_mobile_image'

        assign slide_enabled = block.settings[slide_enabled_key]
        assign desktop_image = block.settings[desktop_image_key]
        assign mobile_image = block.settings[mobile_image_key]
      %}

      {% if slide_enabled %}
        <div class="ai-hero-slideshow__slide-{{ ai_gen_id }} {% if forloop.first %}active{% endif %}" data-slide-index="{{ forloop.index0 }}">
          {% if desktop_image %}
            <picture>
              {% if mobile_image %}
                <source
                  media="(max-width: 749px)"
                  srcset="{{ mobile_image | image_url: width: 750 }} 750w, {{ mobile_image | image_url: width: 1500 }} 1500w"
                >
              {% endif %}
              <img
                src="{{ desktop_image | image_url: width: 1920 }}"
                srcset="{{ desktop_image | image_url: width: 1920 }} 1920w, {{ desktop_image | image_url: width: 2560 }} 2560w"
                alt="{{ desktop_image.alt | escape }}"
                loading="{% if forloop.first %}eager{% else %}lazy{% endif %}"
                class="ai-hero-slideshow__image-{{ ai_gen_id }}"
                width="{{ desktop_image.width }}"
                height="{{ desktop_image.height }}"
              >
            </picture>
          {% else %}
            <div class="ai-hero-slideshow__placeholder-{{ ai_gen_id }}">
              {{ 'hero-apparel-1' | placeholder_svg_tag }}
              <div class="ai-hero-slideshow__empty-state-{{ ai_gen_id }}">
                Add an image for slide {{ i }}
              </div>
            </div>
          {% endif %}
        </div>
      {% endif %}
    {% endfor %}
  </div>

  <div class="ai-hero-slideshow__content-wrapper-{{ ai_gen_id }}">
    <div class="ai-hero-slideshow__content-{{ ai_gen_id }}">
      {% if block.settings.text != blank %}
        <div class="ai-hero-slideshow__text-{{ ai_gen_id }}">
          {{ block.settings.text }}
        </div>
      {% endif %}

      {% if block.settings.button_1_text != blank or block.settings.button_2_text != blank %}
        <div class="ai-hero-slideshow__buttons-{{ ai_gen_id }}">
          {% if block.settings.button_1_text != blank %}
            <a
              href="{{ block.settings.button_1_link }}"
              class="ai-hero-slideshow__button-{{ ai_gen_id }} ai-hero-slideshow__button-{{ ai_gen_id }}--primary"
            >
              {{ block.settings.button_1_text }}
            </a>
          {% endif %}

          {% if block.settings.button_2_text != blank %}
            <a
              href="{{ block.settings.button_2_link }}"
              class="ai-hero-slideshow__button-{{ ai_gen_id }} ai-hero-slideshow__button-{{ ai_gen_id }}--secondary"
            >
              {{ block.settings.button_2_text }}
            </a>
          {% endif %}
        </div>
      {% endif %}
    </div>
  </div>

  {% assign enabled_slides_count = 0 %}
  {% for i in (1..3) %}
    {% liquid
      assign slide_enabled_key = 'slide_' | append: i | append: '_enabled'
      assign slide_enabled = block.settings[slide_enabled_key]
    %}
    {% if slide_enabled %}
      {% assign enabled_slides_count = enabled_slides_count | plus: 1 %}
    {% endif %}
  {% endfor %}

  {% if enabled_slides_count > 1 %}
    <div class="ai-hero-slideshow__nav-{{ ai_gen_id }}">
      {% for i in (1..enabled_slides_count) %}
        <button
          class="ai-hero-slideshow__nav-dot-{{ ai_gen_id }} {% if forloop.first %}active{% endif %}"
          data-slide-index="{{ forloop.index0 }}"
          aria-label="Go to slide {{ forloop.index }}"
        ></button>
      {% endfor %}
    </div>
  {% endif %}
</hero-slideshow-{{ ai_gen_id }}>

<script>
  (function() {
    class HeroSlideshow{{ai_gen_id}} extends HTMLElement {
      constructor() {
        super();
        this.currentSlide = 0;
        this.autoplayInterval = null;
      }

      connectedCallback() {
        this.slides = this.querySelectorAll('.ai-hero-slideshow__slide-{{ ai_gen_id }}');
        this.dots = this.querySelectorAll('.ai-hero-slideshow__nav-dot-{{ ai_gen_id }}');
        this.autoplaySpeed = parseInt(this.dataset.autoplaySpeed) * 1000;

        if (this.slides.length > 1) {
          this.setupEventListeners();
          this.startAutoplay();
        }
      }

      disconnectedCallback() {
        this.stopAutoplay();
      }

      setupEventListeners() {
        this.dots.forEach((dot) => {
          dot.addEventListener('click', (e) => {
            const slideIndex = parseInt(e.currentTarget.dataset.slideIndex);
            this.goToSlide(slideIndex);
            this.stopAutoplay();
            this.startAutoplay();
          });
        });
      }

      goToSlide(index) {
        this.slides[this.currentSlide].classList.remove('active');
        if (this.dots.length > 0) {
          this.dots[this.currentSlide].classList.remove('active');
        }

        this.currentSlide = index;

        this.slides[this.currentSlide].classList.add('active');
        if (this.dots.length > 0) {
          this.dots[this.currentSlide].classList.add('active');
        }
      }

      nextSlide() {
        const nextIndex = (this.currentSlide + 1) % this.slides.length;
        this.goToSlide(nextIndex);
      }

      startAutoplay() {
        if (this.autoplaySpeed > 0 && this.slides.length > 1) {
          this.autoplayInterval = setInterval(() => {
            this.nextSlide();
          }, this.autoplaySpeed);
        }
      }

      stopAutoplay() {
        if (this.autoplayInterval) {
          clearInterval(this.autoplayInterval);
          this.autoplayInterval = null;
        }
      }
    }

    customElements.define('hero-slideshow-{{ ai_gen_id }}', HeroSlideshow{{ai_gen_id}});
  })();
</script>

