{% doc %}
  @prompt
    Please create a full width hero section. This hero section should have a slide show of up to three images and allow for mobile and desktop images to be uploaded and a custom time loop set. 
    
    There should be controls for adding in two buttons as well as rich text. Controls over placement and characteristics of this content for both mobile and desktop should be simple and easy to use 
{% enddoc %}

{% assign ai_gen_id = block.id | replace: '_', '' | downcase %}

{% style %}
  .ai-hero-slideshow-{{ ai_gen_id }} {
    position: relative;
    width: 100%;
    height: {{ block.settings.desktop_height }}px;
    overflow: hidden;
  }

  .ai-hero-slideshow__slides-{{ ai_gen_id }} {
    position: relative;
    width: 100%;
    height: 100%;
  }

  .ai-hero-slideshow__slide-{{ ai_gen_id }} {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    opacity: 0;
    transition: opacity 0.8s ease-in-out;
    pointer-events: none;
  }

  .ai-hero-slideshow__slide-{{ ai_gen_id }}.active {
    opacity: 1;
    pointer-events: auto;
  }

  .ai-hero-slideshow__image-{{ ai_gen_id }} {
    width: 100%;
    height: 100%;
    object-fit: cover;
    object-position: {{ block.settings.desktop_image_position }};
  }

  .ai-hero-slideshow__placeholder-{{ ai_gen_id }} {
    width: 100%;
    height: 100%;
    background-color: #f4f4f4;
    display: flex;
    align-items: center;
    justify-content: center;
    position: relative;
  }

  .ai-hero-slideshow__placeholder-{{ ai_gen_id }} svg {
    width: 100%;
    height: 100%;
    max-width: 500px;
    max-height: 500px;
  }

  .ai-hero-slideshow__empty-state-{{ ai_gen_id }} {
    position: absolute;
    bottom: 20px;
    left: 50%;
    transform: translateX(-50%);
    padding: 12px 20px;
    font-size: 14px;
    color: #666;
    text-align: center;
    pointer-events: none;
  }

  .ai-hero-slideshow__content-wrapper-{{ ai_gen_id }} {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    display: flex;
    align-items: {{ block.settings.desktop_vertical_alignment }};
    justify-content: {{ block.settings.desktop_horizontal_alignment }};
    padding: 40px;
    z-index: 2;
  }

  .ai-hero-slideshow__content-{{ ai_gen_id }} {
    max-width: {{ block.settings.content_max_width }}px;
    text-align: {{ block.settings.desktop_text_alignment }};
    color: {{ block.settings.text_color }};
  }

  .ai-hero-slideshow__text-{{ ai_gen_id }} {
    margin-bottom: 24px;
    font-size: {{ block.settings.desktop_text_size }}px;
    line-height: 1.5;
  }

  .ai-hero-slideshow__text-{{ ai_gen_id }} h1,
  .ai-hero-slideshow__text-{{ ai_gen_id }} h2,
  .ai-hero-slideshow__text-{{ ai_gen_id }} h3,
  .ai-hero-slideshow__text-{{ ai_gen_id }} h4,
  .ai-hero-slideshow__text-{{ ai_gen_id }} h5,
  .ai-hero-slideshow__text-{{ ai_gen_id }} h6 {
    margin: 0 0 16px;
    color: inherit;
  }

  .ai-hero-slideshow__text-{{ ai_gen_id }} p {
    margin: 0 0 16px;
  }

  .ai-hero-slideshow__text-{{ ai_gen_id }} p:last-child {
    margin-bottom: 0;
  }

  .ai-hero-slideshow__buttons-{{ ai_gen_id }} {
    display: flex;
    gap: 16px;
    flex-wrap: wrap;
    justify-content: {{ block.settings.desktop_text_alignment }};
  }

  .ai-hero-slideshow__button-{{ ai_gen_id }} {
    display: inline-flex;
    align-items: center;
    justify-content: center;
    padding: {{ block.settings.button_padding_vertical }}px {{ block.settings.button_padding_horizontal }}px;
    font-size: {{ block.settings.button_text_size }}px;
    text-decoration: none;
    border-radius: {{ block.settings.button_border_radius }}px;
    transition: all 0.3s ease;
    border: 2px solid transparent;
  }

  .ai-hero-slideshow__button-{{ ai_gen_id }}--primary {
    background-color: {{ block.settings.button_1_bg_color }};
    color: {{ block.settings.button_1_text_color }};
    border-color: {{ block.settings.button_1_bg_color }};
  }

  .ai-hero-slideshow__button-{{ ai_gen_id }}--primary:hover {
    background-color: {{ block.settings.button_1_hover_bg_color }};
    color: {{ block.settings.button_1_hover_text_color }};
    border-color: {{ block.settings.button_1_hover_bg_color }};
  }

  .ai-hero-slideshow__button-{{ ai_gen_id }}--secondary {
    background-color: {{ block.settings.button_2_bg_color }};
    color: {{ block.settings.button_2_text_color }};
    border-color: {{ block.settings.button_2_bg_color }};
  }

  .ai-hero-slideshow__button-{{ ai_gen_id }}--secondary:hover {
    background-color: {{ block.settings.button_2_hover_bg_color }};
    color: {{ block.settings.button_2_hover_text_color }};
    border-color: {{ block.settings.button_2_hover_bg_color }};
  }

  .ai-hero-slideshow__nav-{{ ai_gen_id }} {
    position: absolute;
    bottom: 30px;
    left: 50%;
    transform: translateX(-50%);
    display: flex;
    gap: 12px;
    z-index: 3;
  }

  .ai-hero-slideshow__nav-dot-{{ ai_gen_id }} {
    width: 12px;
    height: 12px;
    border-radius: 50%;
    background-color: {{ block.settings.nav_dot_color }};
    opacity: 0.5;
    border: none;
    cursor: pointer;
    transition: opacity 0.3s ease, transform 0.3s ease;
    padding: 0;
  }

  .ai-hero-slideshow__nav-dot-{{ ai_gen_id }}:hover {
    opacity: 0.8;
    transform: scale(1.2);
  }

  .ai-hero-slideshow__nav-dot-{{ ai_gen_id }}.active {
    opacity: 1;
    transform: scale(1.3);
  }

  @media screen and (max-width: 749px) {
    .ai-hero-slideshow-{{ ai_gen_id }} {
      height: {{ block.settings.mobile_height }}px;
    }

    .ai-hero-slideshow__image-{{ ai_gen_id }} {
      object-position: {{ block.settings.mobile_image_position }};
    }

    .ai-hero-slideshow__content-wrapper-{{ ai_gen_id }} {
      align-items: {{ block.settings.mobile_vertical_alignment }};
      justify-content: {{ block.settings.mobile_horizontal_alignment }};
      padding: 20px;
    }

    .ai-hero-slideshow__content-{{ ai_gen_id }} {
