  .ai-hero-slideshow__text-{{ ai_gen_id }} h2,
  .ai-hero-slideshow__text-{{ ai_gen_id }} h3,
  .ai-hero-slideshow__text-{{ ai_gen_id }} h4,
  .ai-hero-slideshow__text-{{ ai_gen_id }} h5,
