{% doc %}
  @prompt
    Please create a full width hero section. This hero section should have a slide show of up to three images and allow for mobile and desktop images to be uploaded and a custom time loop set. 
    
    There should be controls for adding in two buttons as well as rich text. Controls over placement and characteristics of this content for both mobile and desktop should be simple and easy to use
{% enddoc %}
{% assign ai_gen_id = block.id | replace: '_', '' | downcase %}

{% style %}
  .ai-hero-slideshow-{{ ai_gen_id }} {
    position: relative;
    width: 100%;
    overflow: hidden;
    background-color: #000000;
  }

  .ai-hero-slideshow__slides-{{ ai_gen_id }} {
    position: relative;
    width: 100%;
    height: 100vh;
    min-height: 400px;
    max-height: {{ block.settings.desktop_height }}px;
  }

  @media screen and (max-width: 749px) {
    .ai-hero-slideshow__slides-{{ ai_gen_id }} {
      max-height: {{ block.settings.mobile_height }}px;
    }
  }

  .ai-hero-slideshow__slide-{{ ai_gen_id }} {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    opacity: 0;
    transition: opacity 1s ease-in-out;
    pointer-events: none;
  }

  .ai-hero-slideshow__slide-{{ ai_gen_id }}.active {
    opacity: 1;
    pointer-events: auto;
    z-index: 1;
  }

  .ai-hero-slideshow__image-{{ ai_gen_id }} {
    width: 100%;
    height: 100%;
    object-fit: cover;
    display: block;
  }

  .ai-hero-slideshow__image-placeholder-{{ ai_gen_id }} {
    width: 100%;
    height: 100%;
    background-color: #f4f4f4;
    display: flex;
    align-items: center;
    justify-content: center;
    position: relative;
  }

  .ai-hero-slideshow__image-placeholder-{{ ai_gen_id }} svg {
    width: 100%;
    height: 100%;
    max-width: 500px;
    max-height: 500px;
  }

  .ai-hero-slideshow__empty-state-{{ ai_gen_id }} {
    position: absolute;
    bottom: 20px;
    left: 50%;
    transform: translateX(-50%);
    padding: 12px 20px;
    font-size: 14px;
    color: #666;
    text-align: center;
    pointer-events: none;
  }

  .ai-hero-slideshow__content-{{ ai_gen_id }} {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    display: flex;
    align-items: {{ block.settings.desktop_vertical_alignment }};
    justify-content: {{ block.settings.desktop_horizontal_alignment }};
    padding: 40px;
    z-index: 2;
  }

  @media screen and (max-width: 749px) {
    .ai-hero-slideshow__content-{{ ai_gen_id }} {
      align-items: {{ block.settings.mobile_vertical_alignment }};
      justify-content: {{ block.settings.mobile_horizontal_alignment }};
      padding: 20px;
    }
  }

  .ai-hero-slideshow__content-wrapper-{{ ai_gen_id }} {
    max-width: {{ block.settings.content_max_width }}px;
    text-align: {{ block.settings.desktop_text_alignment }};
    background-color: {{ block.settings.content_background_color }};
    padding: {{ block.settings.content_padding }}px;
    border-radius: {{ block.settings.content_border_radius }}px;
  }

  @media screen and (max-width: 749px) {
    .ai-hero-slideshow__content-wrapper-{{ ai_gen_id }} {
      text-align: {{ block.settings.mobile_text_alignment }};
      max-width: 100%;
    }
  }

  .ai-hero-slideshow__text-{{ ai_gen_id }} {
    color: {{ block.settings.text_color }};
    margin: 0 0 24px;
    font-size: {{ block.settings.desktop_text_size }}px;
    line-height: 1.4;
  }

