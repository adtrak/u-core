{% doc %}
  @prompt
    Create a full width hero section that has the ability to add two buttons, you should be able to position the buttons where ever needed on the hero section and these buttons should follow the same style as the rest of the website. There should be controls to adjust both mobile and desktop layout to ensure a fully responsive design , Please can you add in controls to allow the user to adjust the height of the hero section and also adjust the font that the copy is in 
{% enddoc %}

{% assign ai_gen_id = block.id | replace: '_', '' | downcase %}

{% style %}
  .ai-hero-{{ ai_gen_id }} {
    position: relative;
    width: 100%;
    min-height: {{ block.settings.desktop_height }}px;
    overflow: hidden;
    display: flex;
    align-items: {{ block.settings.desktop_vertical_align }};
    justify-content: {{ block.settings.desktop_horizontal_align }};
  }

  .ai-hero-image-{{ ai_gen_id }} {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    object-fit: cover;
    z-index: 1;
  }

  .ai-hero-placeholder-{{ ai_gen_id }} {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    z-index: 1;
  }

  .ai-hero-placeholder-{{ ai_gen_id }} svg {
    width: 100%;
    height: 100%;
    object-fit: cover;
  }

  .ai-hero-overlay-{{ ai_gen_id }} {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    background-color: {{ block.settings.overlay_color }};
    opacity: {{ block.settings.overlay_opacity }};
    z-index: 2;
  }

  .ai-hero-content-{{ ai_gen_id }} {
    position: relative;
    z-index: 3;
    width: 100%;
    max-width: {{ block.settings.content_max_width }}px;
    padding: {{ block.settings.desktop_padding_vertical }}px {{ block.settings.desktop_padding_horizontal }}px;
    text-align: {{ block.settings.desktop_text_align }};
  }

  .ai-hero-heading-{{ ai_gen_id }} {
    color: {{ block.settings.heading_color }};
    font-size: {{ block.settings.desktop_heading_size }}px;
    font-family: {{ block.settings.heading_font.family }}, {{ block.settings.heading_font.fallback_families }};
    font-weight: {{ block.settings.heading_font.weight }};
    font-style: {{ block.settings.heading_font.style }};
    margin: 0 0 {{ block.settings.heading_spacing }}px 0;
    line-height: 1.2;
  }

  .ai-hero-subheading-{{ ai_gen_id }} {
    color: {{ block.settings.subheading_color }};
    font-size: {{ block.settings.desktop_subheading_size }}px;
    font-family: {{ block.settings.subheading_font.family }}, {{ block.settings.subheading_font.fallback_families }};
    font-weight: {{ block.settings.subheading_font.weight }};
    font-style: {{ block.settings.subheading_font.style }};
    margin: 0 0 {{ block.settings.subheading_spacing }}px 0;
    line-height: 1.5;
  }

  .ai-hero-buttons-{{ ai_gen_id }} {
    display: flex;
    gap: {{ block.settings.button_gap }}px;
    flex-wrap: wrap;
    {% if block.settings.desktop_text_align == 'left' %}
      justify-content: flex-start;
    {% elsif block.settings.desktop_text_align == 'center' %}
      justify-content: center;
    {% elsif block.settings.desktop_text_align == 'right' %}
      justify-content: flex-end;
    {% endif %}
  }

  .ai-hero-button-{{ ai_gen_id }} {
    display: inline-flex;
    align-items: center;
    justify-content: center;
    padding: {{ block.settings.button_padding_vertical }}px {{ block.settings.button_padding_horizontal }}px;
    font-size: {{ block.settings.button_font_size }}px;
    text-decoration: none;
    border-radius: {{ block.settings.button_border_radius }}px;
    transition: all 0.3s ease;
    border: {{ block.settings.button_border_width }}px solid transparent;
  }

  .ai-hero-button-primary-{{ ai_gen_id }} {
    background-color: {{ block.settings.button_primary_bg }};
    color: {{ block.settings.button_primary_text }};
    border-color: {{ block.settings.button_primary_border }};
  }

  .ai-hero-button-primary-{{ ai_gen_id }}:hover {
    background-color: {{ block.settings.button_primary_bg_hover }};
    color: {{ block.settings.button_primary_text_hover }};
    border-color: {{ block.settings.button_primary_border_hover }};
  }

  .ai-hero-button-secondary-{{ ai_gen_id }} {
    background-color: {{ block.settings.button_secondary_bg }};
    color: {{ block.settings.button_secondary_text }};
    border-color: {{ block.settings.button_secondary_border }};
  }

  .ai-hero-button-secondary-{{ ai_gen_id }}:hover {
    background-color: {{ block.settings.button_secondary_bg_hover }};
    color: {{ block.settings.button_secondary_text_hover }};
    border-color: {{ block.settings.button_secondary_border_hover }};
  }

  .ai-hero-empty-state-{{ ai_gen_id }} {
    position: absolute;
    bottom: 20px;
    left: 50%;
    transform: translateX(-50%);
    padding: 12px 20px;
    font-size: 14px;
    color: #666;
    text-align: center;
    pointer-events: none;
    z-index: 4;
  }

  @media screen and (max-width: 749px) {
    .ai-hero-{{ ai_gen_id }} {
      min-height: {{ block.settings.mobile_height }}px;
      align-items: {{ block.settings.mobile_vertical_align }};
      justify-content: {{ block.settings.mobile_horizontal_align }};
    }

    .ai-hero-content-{{ ai_gen_id }} {
      padding: {{ block.settings.mobile_padding_vertical }}px {{ block.settings.mobile_padding_horizontal }}px;
      text-align: {{ block.settings.mobile_text_align }};
    }

    .ai-hero-heading-{{ ai_gen_id }} {
      font-size: {{ block.settings.mobile_heading_size }}px;
    }

    .ai-hero-subheading-{{ ai_gen_id }} {
      font-size: {{ block.settings.mobile_subheading_size }}px;
    }

    .ai-hero-buttons-{{ ai_gen_id }} {
      {% if block.settings.mobile_text_align == 'left' %}
        justify-content: flex-start;
      {% elsif block.settings.mobile_text_align == 'center' %}
        justify-content: center;
      {% elsif block.settings.mobile_text_align == 'right' %}
        justify-content: flex-end;
      {% endif %}
      {% if block.settings.mobile_stack_buttons %}
        flex-direction: column;
        align-items: stretch;
      {% endif %}
    }

    .ai-hero-button-{{ ai_gen_id }} {
      {% if block.settings.mobile_stack_buttons %}
        width: 100%;
      {% endif %}
    }
  }
{% endstyle %}

<div class="ai-hero-{{ ai_gen_id }}" {{ block.shopify_attributes }}>
  {% if block.settings.image %}
    <img
      src="{{ block.settings.image | image_url: width: 2000 }}"
      srcset="{{ block.settings.image | image_url: width: 750 }} 750w,
              {{ block.settings.image | image_url: width: 1500 }} 1500w,
              {{ block.settings.image | image_url: width: 2000 }} 2000w"
      sizes="100vw"
      alt="{{ block.settings.image.alt | escape }}"
      loading="lazy"
      width="{{ block.settings.image.width }}"
      height="{{ block.settings.image.height }}"
      class="ai-hero-image-{{ ai_gen_id }}"
    >
  {% else %}
    <div class="ai-hero-placeholder-{{ ai_gen_id }}">
      {{ 'hero-apparel-1' | placeholder_svg_tag }}
    </div>
    <div class="ai-hero-empty-state-{{ ai_gen_id }}">
      Add an image to get started
    </div>
  {% endif %}

  {% if block.settings.show_overlay %}
    <div class="ai-hero-overlay-{{ ai_gen_id }}"></div>
  {% endif %}

  <div class="ai-hero-content-{{ ai_gen_id }}">
    {% if block.settings.heading != blank %}
      <h1 class="ai-hero-heading-{{ ai_gen_id }}">{{ block.settings.heading }}</h1>
    {% endif %}

    {% if block.settings.subheading != blank %}
      <div class="ai-hero-subheading-{{ ai_gen_id }}">{{ block.settings.subheading }}</div>
    {% endif %}

    {% if block.settings.button_1_text != blank or block.settings.button_2_text != blank %}
      <div class="ai-hero-buttons-{{ ai_gen_id }}">
        {% if block.settings.button_1_text != blank %}
          <a
            href="{{ block.settings.button_1_link }}"
            class="ai-hero-button-{{ ai_gen_id }} ai-hero-button-primary-{{ ai_gen_id }}"
          >
            {{ block.settings.button_1_text }}
          </a>
        {% endif %}

        {% if block.settings.button_2_text != blank %}
          <a
            href="{{ block.settings.button_2_link }}"
            class="ai-hero-button-{{ ai_gen_id }} ai-hero-button-secondary-{{ ai_gen_id }}"
          >
            {{ block.settings.button_2_text }}
          </a>
        {% endif %}
      </div>
    {% endif %}
  </div>
</div>

