{% doc %}
  @prompt
    Generate a hero section that has the facility to add two buttons. There should be controls to allow for customisation of the buttons including hover, outline, radius etc You should have full control of where these buttons sit on the element. There should be an upload option for both desktop and mobile background image to ensure full responsiveness and controls for the height of this ensuing the banner is always full width. There should also be the option to upload an image on top of the banner with controls for placement  
{% enddoc %}
{% assign ai_gen_id = block.id | replace: '_', '' | downcase %}

{% style %}
  .ai-hero-section-{{ ai_gen_id }} {
    position: relative;
    width: 100%;
    height: {{ block.settings.desktop_height }}px;
    overflow: hidden;
  }

  .ai-hero-background-{{ ai_gen_id }} {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    object-fit: cover;
  }

  .ai-hero-background-placeholder-{{ ai_gen_id }} {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    background-color: #f4f4f4;
    display: flex;
    align-items: center;
    justify-content: center;
  }

  .ai-hero-background-placeholder-{{ ai_gen_id }} svg {
    width: 100%;
    height: 100%;
    max-width: 500px;
    max-height: 500px;
  }

  .ai-hero-overlay-{{ ai_gen_id }} {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    background-color: rgba(0, 0, 0, {{ block.settings.overlay_opacity }});
  }

  .ai-hero-content-{{ ai_gen_id }} {
    position: relative;
    width: 100%;
    height: 100%;
    display: flex;
    flex-direction: column;
    align-items: {{ block.settings.content_horizontal_alignment }};
    justify-content: {{ block.settings.content_vertical_alignment }};
    padding: 40px 20px;
    z-index: 2;
  }

  .ai-hero-overlay-image-{{ ai_gen_id }} {
    position: absolute;
    top: {{ block.settings.overlay_image_vertical }}%;
    left: {{ block.settings.overlay_image_horizontal }}%;
    transform: translate(-50%, -50%);
    max-width: {{ block.settings.overlay_image_max_width }}%;
    z-index: 3;
  }

  .ai-hero-overlay-image-{{ ai_gen_id }} img {
    width: 100%;
    height: auto;
    display: block;
  }

  .ai-hero-heading-{{ ai_gen_id }} {
    color: {{ block.settings.heading_color }};
    font-size: {{ block.settings.heading_size }}px;
    margin: 0 0 16px;
    text-align: center;
    max-width: 800px;
  }

  .ai-hero-subheading-{{ ai_gen_id }} {
    color: {{ block.settings.subheading_color }};
    font-size: {{ block.settings.subheading_size }}px;
    margin: 0 0 32px;
    text-align: center;
    max-width: 600px;
  }

  .ai-hero-buttons-{{ ai_gen_id }} {
    display: flex;
    gap: 16px;
    flex-wrap: wrap;
    justify-content: center;
  }

  .ai-hero-button-{{ ai_gen_id }} {
    display: inline-flex;
    align-items: center;
    justify-content: center;
    padding: {{ block.settings.button_padding_vertical }}px {{ block.settings.button_padding_horizontal }}px;
    font-size: {{ block.settings.button_font_size }}px;
    text-decoration: none;
    cursor: pointer;
    transition: all 0.3s ease;
    border-radius: {{ block.settings.button_border_radius }}px;
    border-width: {{ block.settings.button_border_width }}px;
    border-style: solid;
  }

  .ai-hero-button-primary-{{ ai_gen_id }} {
    background-color: {{ block.settings.button_primary_bg }};
    color: {{ block.settings.button_primary_text_color }};
    border-color: {{ block.settings.button_primary_border }};
  }

  .ai-hero-button-primary-{{ ai_gen_id }}:hover {
    background-color: {{ block.settings.button_primary_bg_hover }};
    color: {{ block.settings.button_primary_text_hover }};
    border-color: {{ block.settings.button_primary_border_hover }};
  }

  .ai-hero-button-secondary-{{ ai_gen_id }} {
    background-color: {{ block.settings.button_secondary_bg }};
    color: {{ block.settings.button_secondary_text_color }};
    border-color: {{ block.settings.button_secondary_border }};
  }

  .ai-hero-button-secondary-{{ ai_gen_id }}:hover {
    background-color: {{ block.settings.button_secondary_bg_hover }};
    color: {{ block.settings.button_secondary_text_hover }};
    border-color: {{ block.settings.button_secondary_border_hover }};
  }

  @media screen and (max-width: 749px) {
    .ai-hero-section-{{ ai_gen_id }} {
      height: {{ block.settings.mobile_height }}px;
    }

    .ai-hero-heading-{{ ai_gen_id }} {
      font-size: {{ block.settings.heading_size | times: 0.7 }}px;
    }

    .ai-hero-subheading-{{ ai_gen_id }} {
      font-size: {{ block.settings.subheading_size | times: 0.8 }}px;
    }

    .ai-hero-buttons-{{ ai_gen_id }} {
      flex-direction: column;
      width: 100%;
      max-width: 300px;
    }

    .ai-hero-button-{{ ai_gen_id }} {
      width: 100%;
    }

    .ai-hero-overlay-image-{{ ai_gen_id }} {
      max-width: {{ block.settings.overlay_image_max_width | times: 1.2 }}%;
    }
  }
{% endstyle %}

<div class="ai-hero-section-{{ ai_gen_id }}" {{ block.shopify_attributes }}>
  {% if block.settings.desktop_background %}
    <picture>
      {% if block.settings.mobile_background %}
        <source media="(max-width: 749px)" srcset="{{ block.settings.mobile_background | image_url: width: 750 }}">
      {% endif %}
      <img
        src="{{ block.settings.desktop_background | image_url: width: 2000 }}"
        alt="{{ block.settings.desktop_background.alt | escape }}"
        class="ai-hero-background-{{ ai_gen_id }}"
        loading="lazy"
        width="{{ block.settings.desktop_background.width }}"
        height="{{ block.settings.desktop_background.height }}"
      >
    </picture>
  {% else %}
    <div class="ai-hero-background-placeholder-{{ ai_gen_id }}">
      {{ 'hero-apparel-1' | placeholder_svg_tag }}
    </div>
  {% endif %}

  {% if block.settings.show_overlay %}
    <div class="ai-hero-overlay-{{ ai_gen_id }}"></div>
  {% endif %}

  <div class="ai-hero-content-{{ ai_gen_id }}">
    {% if block.settings.heading != blank %}
      <h1 class="ai-hero-heading-{{ ai_gen_id }}">{{ block.settings.heading }}</h1>
    {% endif %}

    {% if block.settings.subheading != blank %}
      <p class="ai-hero-subheading-{{ ai_gen_id }}">{{ block.settings.subheading }}</p>
    {% endif %}

    {% if block.settings.button_primary_label != blank or block.settings.button_secondary_label != blank %}
      <div class="ai-hero-buttons-{{ ai_gen_id }}">
        {% if block.settings.button_primary_label != blank %}
          <a
            href="{{ block.settings.button_primary_link }}"
            class="ai-hero-button-{{ ai_gen_id }} ai-hero-button-primary-{{ ai_gen_id }}"
          >
            {{ block.settings.button_primary_label }}
          </a>
        {% endif %}

        {% if block.settings.button_secondary_label != blank %}
          <a
            href="{{ block.settings.button_secondary_link }}"
            class="ai-hero-button-{{ ai_gen_id }} ai-hero-button-secondary-{{ ai_gen_id }}"
          >
            {{ block.settings.button_secondary_label }}
          </a>
        {% endif %}
      </div>
    {% endif %}
  </div>

  {% if block.settings.overlay_image %}
    <div class="ai-hero-overlay-image-{{ ai_gen_id }}">
      <img
        src="{{ block.settings.overlay_image | image_url: width: 1000 }}"
        alt="{{ block.settings.overlay_image.alt | escape }}"
        loading="lazy"
        width="{{ block.settings.overlay_image.width }}"
        height="{{ block.settings.overlay_image.height }}"
      >
    </div>
  {% endif %}
</div>

