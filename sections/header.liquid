{% liquid 
    if section.settings.menu.links == blank
        assign main_menu_linklist = linklists[section.settings.menu].links
    else
        assign main_menu_linklist = section.settings.menu.links
    endif
%}

<link rel="stylesheet" href="{{ 'main.css' | asset_url }}" />

<div
  class="absolute top-0 w-full z-10"
  x-data="{ mobileMenuOpen: false }"
  x-cloak>
  <div class="mx-auto containerwide">
    <div class="flex lg:justify-center justify-between items-center py-6 px-8 lg:px-12 mt-6 xl:space-x-10 border-white border-2 rounded-full">
      <!-- STORE NAME / STORE LOGO -->
      <div class="flex justify-start lg:flex-1 truncate">
        <a href="{{ routes.root_url }}" class="max-w-[200px]">
          <img src="{{ 'logoOLD.svg' | asset_url }}" alt="logo" height="100%" width="100%">
        </a>
      </div>

      <!-- Mobile Menu Icon -->
      <div class="flex lg:hidden items-center justify-end lg:flex-1 space-x-2 pl-6">
        <a href="{{ routes.cart_url }}" class="bg-black whitespace-nowrap text-base text-white p-2 rounded-full hover:text-gray-900">
          {% render 'icon-shopping-bag' icon-colour: "white" %}
        </a>

        <button
          x-on:click="mobileMenuOpen = true"
          type="button"
          class="bg-black whitespace-nowrap text-base text-white p-2 rounded-full hover:text-gray-900">
          {% render 'icon-menu', icon-colour: "white" %}
        </button>
      </div>

      <!-- Main page navigation desktop -->
      <div class="header-right hidden lg:flex">

        <ul class="parent flex space-x-2 ml-4">
          {% for link in linklists.main-menu.links %}
            <li class="group/parent relative">
              {% render 'button', text: link.title, url: link.url, btn-style: "white", extra-class: "relative min-w-[120px] z-10 fade-in-container" %}
              {% if link.links != blank %}
                <ul class="child hidden group/parent group-hover/parent:block absolute top-0 p-6 pt-16 bg-white rounded-[30px] w-full">
                  {% for child_link in link.links %}
                    <li class="group/child w-full">
                      <a href="{{ child_link.url }}" class="relative w-full block">{{ child_link.title }}</a>
                      {% if child_link.links != blank %}
                        <ul class="grandchild hidden group-hover/child:block absolute right-0 w-full">
                          {% for grandchild_link in child_link.links %}
                            <li>
                              <a href="{{ grandchild_link.url }}">{{ grandchild_link.title }}</a>
                            </li>
                          {% endfor %}
                        </ul>
                      {% endif %}
                    </li>
                  {% endfor %}
                </ul>
              {% endif %}
            </li>
          {% endfor %}
        </ul>


        <!-- CART BUTTON / ACCOUNT LINKS IF ENABLED -->
        <div class="hidden lg:flex items-center justify-end lg:flex-1 space-x-2 pl-6">
          {% comment %} <button
            id="openSearch"
            type="button"
            class="bg-black whitespace-nowrap text-base text-white p-2 rounded-full hover:text-gray-900">
            {% render 'icon-search', icon-colour: "white" %}
          </button> {% endcomment %}
          <a href="{{ routes.cart_url }}" class="bg-black hover:bg-grey transition-all whitespace-nowrap text-base text-white p-2 rounded-full hover:text-gray-900">
            {% render 'icon-shopping-bag' icon-colour: "white" %}
          </a>
        </div>

      </div>

      <!-- MOBILE HIDDEN MENU CONTAINER -->
      <div x-show="mobileMenuOpen" class="absolute top-0 inset-x-0 p-6 transform origin-top-left lg:hidden mx-auto containerwide z-50">
        <div class="shadow-lg rounded-[45px] border-white border-2 ring-1 ring-black ring-opacity-5 bg-white w-full">
          <div class="py-6 px-8 divide-y-2 divide-gray-50 ">

            <!-- MOBILE MENU HEADER TITLE PLUS CLOSE BUTTON -->

            <div class="flex items-center justify-between pb-6">
              <div>
                <h1 class="text-lg font-heading font-big text-gray-500">{{ section.settings.mobile_menu_title }}</h1>
              </div>
              <div class="ml-2">
                <button
                  x-on:click="mobileMenuOpen = false"
                  type="button"
                  class="bg-black p-2 text-white rounded-full">
                  {% render 'icon-close' %}
                </button>
              </div>
            </div>

            

            <!-- NAVIGATION LINKS FOR MOBILE MENU -->
            <div class="pt-6">
              <ul class="menu-drawer__menu list-menu" role="list">
                {%- for link in section.settings.menu.links -%}
                  <li class="uppercase mb-2 font-heading">
                    {%- if link.links != blank -%}
                      <details id="Details-menu-drawer-menu-item-{{ forloop.index }}" class="ml-2">
                        <summary class="{% if link.child_active %}active{% endif %}">
                          {{ link.title | escape }}
                        </summary>
                        <div id="link-{{ link.title | escape }}" tabindex="-1">
                          <div class="submenu my-2 pl-4 border-l-2 border-grey overflow-auto">
                            <a class="uppercase my-2" aria-expanded="true" href="{{ link.url }}">
                              {{ link.title | escape }}
                            </a>
                            <ul role="list" tabindex="-1">
                              {%- for childlink in link.links -%}
                                <li>
                                  {%- if childlink.links == blank -%}
                                    <a
                                      href="{{ childlink.url }}"
                                      class="{% if childlink.current %}active{% endif %} block uppercase my-2"
                                      {% if childlink.current %}
                                      aria-current="page"
                                      {% endif %}>{{ childlink.title | escape }}</a>
                                  {%- else -%}
                                    <details id="submenu-{{ forloop.index }}" class="ml-2">
                                      <summary>{{ childlink.title | escape }}</summary>
                                      <div id="childlink-{{ childlink.title | escape }}">
                                        <button aria-expanded="true">{{ childlink.title | escape }}</button>
                                        <ul role="list" tabindex="-1">
                                          {%- for grandchildlink in childlink.links -%}
                                            <li>
                                              <a
                                                href="{{ grandchildlink.url }}"
                                                class="{% if grandchildlink.current %}active{% endif %}"
                                                {% if grandchildlink.current %}
                                                aria-current="page"
                                                {% endif %}>
                                                {{ grandchildlink.title | escape }}</a>
                                            </li>
                                          {%- endfor -%}
                                        </ul>
                                      </div>
                                    </details>
                                  {%- endif -%}
                                </li>
                              {%- endfor -%}
                            </ul>
                          </div>
                        </div>
                      </details>
                    {%- else -%}
                      <a
                        href="{{ link.url }}"
                        class="{% if link.current %}active{% endif %}"
                        {% if link.current %}
                        aria-current="page"
                        {% endif %}>
                        {{ link.title | escape }}
                      </a>
                    {%- endif -%}
                  </li>
                {%- endfor -%}
              </ul>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>

<script>
  const openSearchBtn = document.getElementById("openSearch")
  const closeSearchBtn = document.getElementById("closeSearch")
  const search = document.getElementById("searchbar")

  openSearchBtn.addEventListener("click", revealSearch);
  closeSearchBtn.addEventListener("click", closeSearch);

  function revealSearch() {
    search.style.display = "block";
  }

  function closeSearch() {
    search.style.display = "none";
  }
</script>

{% schema %}
  {
    "name": "Header",
    "settings": [
      {
        "type": "text",
        "id": "mobile_menu_title",
        "default": "Menu",
        "label": "Mobile Menu Title"
      }, {
        "type": "link_list",
        "id": "menu",
        "default": "main-menu",
        "label": "Heading Navigation Menu"
      }
    ]
  }
{% endschema %}