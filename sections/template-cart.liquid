{% if cart.item_count > 0 %}
    <div>
        <div class="containerequal flex flex-col mx-auto">
            <div class="flex items-center justify-between flex-wrap my-5">
                <h1 class="text-3xl font-big w-full lg:w-auto mb-4">Your cart</h1>
                {% comment %} {% render 'button', text: "Continue Shopping", url: routes.all_products_collection_url, btn-style: "white" %} {% endcomment %}
            </div>
        </div>

        <div class="containerequal mx-0 flex flex-col mb-10 lg:mx-auto">
            <form action="{{ routes.cart_url }}" method="POST" novalidate>
                <table class="table-auto divide-y divide-gray-200 my-4 w-full">
                    <thead>
                        <th class="px-2 lg:px-4 py-3 text-left uppercase font-heading text-gray-500">Product</th>
                        <th class="px-2 lg:px-4 py-3 text-left uppercase font-heading text-gray-500">Quantity</th>
                        <th class="px-2 lg:px-4 py-3 text-left uppercase font-heading text-gray-500">Price</th>
                    </thead>
                    <tbody>
                        {% for item in cart.items %}
                            <tr class="table-row border-b-2 border-lightgrey">
                                <td class="px-2 lg:px-6 py-3 flex flex-col justify-center">
                                    <a href="{{ item.url }}">
                                        {% if item.image %}
                                            <img src="{{ item.image | img_url: 'medium' }}" alt="{{ item.title | escape }}" class="w-32 h-32 object-cover border">
                                        {% else %}
                                            {{ 'product-1' | placeholder_svg_tag: 'w-20 h-20 object-cover border' }}
                                        {% endif %}
                                    </a>
                                </td>
                                <td class="px-2 lg:px-6 py-3  flex flex-col justify-center">
                                    <a href="{{ item.url }}" class="my-1">{{ item.product.title | truncatewords: 5 }}</a>
                                    <span class="text-sm text-gray-500 my-1">{{ item.variant.title }}</span>
                                    <a href="{{ routes.cart_change_url }}?line={{ forloop.index }}&quantity=0" class="font-small text-red my-1">Remove</a>
                                </td>
                                <td class="px-6 py-3 ">
                                    <input type="number" name="updates[]" value="{{ item.quantity }}" min="1" id="updates_{{ forloop.index }}" class="w-20 border p-2">
                                </td>
                                <td class="px-6 py-3 ">
                                    {{ item.line_price | money }}
                                </td>
                            </tr>
                        {% endfor %}
                    </tbody>
                </table>

                <div class="flex w-full flex-col md:flex-col items-center justify-between">

                    <div class="w-full flex justify-between my-4">
                        <div>
                            <button type="submit" name="update" class="text-grey text-[13px]">
                                <span class="leading-none mx-auto underline mb-4 block hover:text-midgrey trans">Update</span>
                            </button>
                            <h3 class="text-xl">Subtotal <span class="font-heading block">{{ cart.total_price | money }}</span></h3>
                        </div>
                        <div>
                            <div class="my-2">
                                <button type="submit" name="checkout" class="relative flex items-center font-heading font-light bg-white border-yellow border-2 text-grey text-[13px] text-base rounded-[40px] py-[15px] px-[25px] text-center tracking-wide uppercase group transition w-full">
                                    <span class="leading-none mx-auto ">Checkout</span>
                                </button>
                            </div>
                        </div>
                    </div>
                </div>
            </form>
        </div>
    </div>
{% else %}
    <div class="max-w-6xl mx-auto flex items-center justify-center mb-32 lg:mb-48">
        <div class="text-center">
            <h1 class="text-3xl my-4 font-heading">Your cart is empty</h1>
            {% render 'button', text: "Go Shopping", url: routes.all_products_collection_url, btn-style: "white" %}
        </div>
    </div>
{% endif %}

{% schema %}
{
    "name": "Template Cart",
    "blocks": [
        {
            "type": "subtotal",
            "name": "Subtotal",
            "limit": 1
        },
        {
            "type": "update_button",
            "name": "Update Button",
            "limit": 1
        },
        {
            "type": "checkout_button",
            "name": "Checkout Button",
            "limit": 1
        }
    ]
}
{% endschema %}