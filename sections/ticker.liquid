<div class="ticker-bar bg-yellow text-black overflow-hidden whitespace-nowrap py-2">
  <div class="ticker-content animate-ticker inline-flex text-sm">

    <!-- HARD CODED LOOP CONTENT -->
    <span class="uppercase font-heading tracking-wide mx-8">
      <span class="font-bold">JANUARY</span> <span class="font-light">DEALS</span>
    </span>
    <span style="margin-left:20px;margin-right:20px;">|</span>

    <span class="uppercase font-heading tracking-wide mx-8">
      <span class="font-bold">40%</span> <span class="font-light">DISCOUNT</span>
    </span>
    <span style="margin-left:20px;margin-right:20px;">|</span>

    <!-- Repeat for smooth looping -->
    <span class="uppercase font-heading tracking-wide mx-8">
      <span class="font-bold">JANUARY</span> <span class="font-light">DEALS</span>
    </span>
    <span style="margin-left:20px;margin-right:20px;">|</span>

    <span class="uppercase font-heading tracking-wide mx-8">
      <span class="font-bold">40%</span> <span class="font-light">DISCOUNT</span>
    </span>
    <span style="margin-left:20px;margin-right:20px;">|</span>

    <span class="uppercase font-heading tracking-wide mx-8">
      <span class="font-bold">JANUARY</span> <span class="font-light">DEALS</span>
    </span>
    <span style="margin-left:20px;margin-right:20px;">|</span>

    <span class="uppercase font-heading tracking-wide mx-8">
      <span class="font-bold">40%</span> <span class="font-light">DISCOUNT</span>
    </span>

  </div>
</div>

<style>
  @keyframes ticker-move {
    0% { transform: translateX(100%); }
    100% { transform: translateX(-100%); }
  }

  .animate-ticker {
    animation: ticker-move 24s linear infinite;
  }

  .ticker-bar strong {
    font-weight: 800;
  }
</style>


{% schema %}
{
  "name": "Ticker Bar",
  "settings": [
    {
      "type": "text",
      "id": "ticker_text",
      "label": "Ticker items (comma separated)",
      "default": "JANUARY DEALS, 40% DISCOUNT"
    }
  ],
  "presets": [
    { "name": "Ticker Bar" }
  ]
}
{% endschema %}
