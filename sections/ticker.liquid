<div class="ticker-bar bg-yellow text-black overflow-hidden whitespace-nowrap py-2">
  <div class="ticker-content animate-ticker inline-block">

    {% assign items = section.settings.ticker_text | split: ',' %}
    {% for item in items %}
      <span class="mx-6 uppercase font-heading tracking-wide">
        {{ item | strip | replace: 'BLACK FRIDAY', '<strong>BLACK FRIDAY</strong>' | replace: '40%', '<strong>40%</strong>' }}
      </span>

      {% unless forloop.last %}
        <span style="margin-left:24px;margin-right:24px;">+</span>
      {% endunless %}
    {% endfor %}

  </div>
</div>

<style>
  @keyframes ticker-move {
    0% { transform: translateX(100%); }
    100% { transform: translateX(-100%); }
  }
  .animate-ticker {
    animation: ticker-move 10s linear infinite;
  }
  strong {
    font-weight: 700;
  }
</style>

{% schema %}
{
  "name": "Ticker Bar",
  "settings": [
    {
      "type": "text",
      "id": "ticker_text",
      "label": "Ticker items (comma separated)",
      "default": "BLACK FRIDAY DEALS, 40% DISCOUNT"
    }
  ],
  "presets": [
    { "name": "Ticker Bar" }
  ]
}
{% endschema %}
