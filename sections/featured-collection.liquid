<link rel="stylesheet" href="{{ 'carousels.css' | asset_url }}" />
<script src="{{ 'carousels.js' | asset_url }}" defer></script>

<div class="flex flex-col items-center my-8">
    <h1 class="text-center text-3xl">{{ section.settings.title }}</h1>

    {% comment %} <div class="max-w-6xl mx-auto">
        <div class="grid grid-cols-1 md:grid-cols-4 gap-4 font-heading">
            {% for product in section.settings.featured_collection.products limit: section.settings.number_of_products_to_show %}
                {% render 'product-card', product_product: product %}
            {% else %}
                {% for item in (1..4) %}
                    {% render 'product-card-placeholder' %}
                {% endfor %}
            {% endfor %}
        </div>
    </div> {% endcomment %}


    <div class="swiper swiper-trending-products">
        <div class="swiper-wrapper">
            {% for product in section.settings.featured_collection.products limit: section.settings.number_of_products_to_show %}
            {% render 'product-card', product_product: product %}
          {% endfor %}
        </div>
        <div class="swiper-pagination-trending-products lg:hidden mt-8 flex justify-center"></div>
        <div id="swiper-button-prev" class="hidden lg:block swiper-button-prev"></div>
        <div id="swiper-button-next" class="hidden lg:block swiper-button-next"></div>
    </div>


</div>



{% schema %}
{
    "name": "Featured Collection",
    "settings": [
        {
            "type": "text",
            "id": "title",
            "default": "Featured Collection",
            "label": "Title"
        },
        {
            "type": "collection",
            "id": "featured_collection",
            "label": "Collection"
        },
        {
            "type": "range",
            "id": "number_of_products_to_show",
            "min": 4,
            "max": 12,
            "default": 4,
            "label": "Number of products to show"
        }
    ],
    "presets": [
        {
            "name": "Featured Collection"
        }
    ]
}
{% endschema %}