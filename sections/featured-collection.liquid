<link rel="stylesheet" href="https://unpkg.com/swiper@7/swiper-bundle.min.css" />
<script src="{{ 'carousels.js' | asset_url }}" defer></script>
<link rel="stylesheet" href="{{ 'carousels.css' | asset_url }}" />

<div class="containercustomright mb-12 lg:mb-36">

    <h1 class="text-black font-heading font-huge font-bold font-huge uppercase text-6xl mb-12">{{ section.settings.title }}</h1>

    <div class="stretchright flex flex-col items-center my-8">

        <div class="swiper swiper-featured-products">
            <div class="swiper-wrapper">
                {% for product in section.settings.featured_collection.products %}
                
                    <div class="swiper-slide">
                        {% render 'product-card', 
                            product_product: product 
                        %}
                    </div>    
                    
                {% endfor %}
            </div>

            <div class="swiper-featured-products-scrollbar"></div>
        
        </div>

    </div>

</div>



{% schema %}
{
    "name": "Featured W/O Colours",
    "settings": [
        {
            "type": "text",
            "id": "title",
            "default": "Featured Collection",
            "label": "Title"
        },
        {
            "type": "collection",
            "id": "featured_collection",
            "label": "Collection"
        },
        {
            "type": "range",
            "id": "number_of_products_to_show",
            "min": 4,
            "max": 12,
            "default": 4,
            "label": "Number of products to show"
        }
    ],
    "presets": [
        {
            "name": "Featured Collection"
        }
    ]
}
{% endschema %}