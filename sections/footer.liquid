{% assign mail = "" %}
{% assign telephone = "" %}

{% if section.settings.mail == "" %}
    {% assign mail = shop.email %}
    {% else %}
    {% assign mail = section.settings.mail %}
{% endif %}

{% if section.settings.telephone == "" %}
    {% assign telephone = shop.phone %}
    {% else %}
    {% assign telephone = section.settings.telephone %}
{% endif %}

<section class="w-full bg-black">
<span class="relative block mx-auto my-0 py-0">
    <picture class="block lg:hidden relative z-5 w-full object-cover">
        <source media="(max-width: 767px)" srcset="{{ section.settings.footer_image.src | img_url: '1024x800', crop: 'center' }}" type="image/webp">
        <source media="(max-width: 767px)" srcset="{{ section.settings.footer_image.src | img_url: '1024x800', crop: 'center' }}" type="image/jpeg">
        <img src="{{ section.settings.footer_image.src | img_url: '1024x800', crop: 'center' }}" class="relative" loading="lazy" alt="" width="1024" height="800">
    </picture>

    <picture class="hidden lg:block relative z-5 mx-auto">
        <source media="(min-width: 768px)" srcset="{{ section.settings.footer_image.src | img_url: '1800x450', crop: 'center' }}" type="image/webp">
        <source media="(min-width: 768px)" srcset="{{ section.settings.footer_image.src | img_url: '1800x450', crop: 'center' }}" type="image/jpeg">
        <img src="{{ section.settings.footer_image.src | img_url: '1800x450', crop: 'center' }}" class="relative mx-auto" loading="lazy" alt="" width="1800" height="350">
    </picture>
</span>
</section>

<section class="bg-yellow w-full py-7 flex items-center">
    <span class="text-center w-full uppercase font-heading font-big font-bold text-white">Putting you at the centre</span>
</section>

<section class="footer bg-black w-full py-24">
    <footer class="containerwide">
        <!-- Footer Top -->
        <div class="footer-top grid md:grid-cols-2 items text-center md:text-start">
            <div class="footer-left flex flex-wrap">
                <ul class="parent block md:flex flex-wrap w-full">
                    {% for link in linklists.footer.links %}
                    <li class="group/parent font-heading font-bold uppercase text-white flex pr-8 py-2">
                        <a href="{{ link.url }}" class="relative hover:underline focus:underline">{{ link.title }}</a>
                    </li>
                    {% endfor %}
                </ul>
            </div>
            <div class="footer-right">
                <ul class="parent block md:flex flex-wrap justify-end w-full">
                    {% for link in linklists.footer-menu-right.links %}
                    <li class="group/parent font-heading font-bold uppercase text-white flex lg:pl-8 py-2">
                        <a href="{{ link.url }}" class="relative hover:underline focus:underline">{{ link.title }}</a>
                    </li>
                    {% endfor %}
                </ul>
            </div>
        </div>
        <!-- Footer Bottom -->
        <div class="footer-bottom grid md:grid-cols-2 items text-center md:text-right mt-12">
            <div class="footer-left flex items-center flex-wrap">
                <div class="flex items-center md:items-start w-full flex-wrap">
                    <a href="{{ routes.root_url }}" class="mx-auto md:mx-0">
                      <img src="{{ 'logo.svg' | asset_url }}" alt="logo" height="100%" width="100%">
                    </a>
                    <p class="text-uppercase font-heading font-bold w-full text-grey mt-6 uppercase md:text-left">© UCORE. All Rights Reserved. The Name UCORE and the Logo are Registered Trademarks.</p>
                </div>
                
            </div>
            <div class="footer-right block md:flex flex-wrap items-end w-full">
                <ul class="parent text-lightgrey uppercase font-heading w-full">
                    <li class="block w-full"><a href="/pages/privacy-policy">Privacy Policy</a></li>
                    <li class="block w-full"><a href="/pages/terms-conditions">Terms & Conditions</a></li>
                </ul>
            </div>
        </div>
    </footer>
</section>
{% comment %} <section class="bg-black font-semibold text-white">
    <footer class="container mx-auto px-1 py-5 md:px-[50px] md:pt-[70px] md:pb-[20px]">
        <div class="md:flex justify-between items-center">
            <div class="text-xl md:text-2xl">
                <p><a href="tel:{{ telephone }}">{{ telephone }}</a></p>
                <p><a href="mailto:{{ mail }}">{{ mail }}</a></p>
                <ul class="flex mt-1">
                    {% for block in section.blocks %} 
                        {% if block.type == 'social' %}
                        <li class="mr-1 md:mr-2"><a href="{{ block.settings.url }}"><i class="{{ block.settings.fa }}"></i></a></li>
                        {% endif %}
                    {% endfor %}
                </ul>

                {% if shop.customer_accounts_enabled %}
                    {% if customer %}
                      <a href="{{ routes.account_url }}" class="text-base text-white hover:text-gray-900">account</a>
                      {{ 'Log out' | customer_logout_link | replace: '<a', '<a class="text-base text-gray-500 hover:text-gray-900"' }}
                    {% else %}
                      {{ 'Log in ' | customer_login_link | replace: '<a', '<a class="text-base text-white hover:text-gray-900"' }}
                      {{ 'Register' | customer_register_link | replace: '<a', '<a class="text-base text-white hover:text-gray-900"' }}
                    {% endif %}
                {% endif %}
            </div>
            <div class="mt-4 md:mt-auto">
                <ul class="flex flex-wrap md:flex-row justify-around">
                    {% for block in section.blocks %} 
                        {% if block.type == 'accreditation' %}
                            <li><img src="{{ block.settings.image | img_url: 'master' }}"  class="w-[150px] py-1 mr-5"></li>
                        {% endif %}
                    {% endfor %}

                </ul>
            </div>
        </div>
        <div class="mt-4 md:mt-[100px]">
            <ul class="flex flex-col md:flex-row md:justify-around md:px-[200px] text-[12px]">
                <a href="">© Adtrak 2022. All Rights Reserved.</a>
                <a href="/pages/privacy-policy">Privacy Policy</a>
                <a href="/pages/terms-and-conditions">Terms & Conditions</a>
                <a href="/pages/legal">Legal</a>
            </ul>
        </div>
    </footer>
</section> {% endcomment %}

{% schema %}
{
    "name": "Footer",
    "settings": [
        {
            "type": "text",
            "id": "mail",
            "label": "Email"
        },
        {
            "type": "text",
            "id": "telephone",
            "label": "Telephone"
        },
        {
            "type": "image_picker",
            "id": "footer_image",
            "label": "Footer Image"
        }
    ],
    "blocks": [
            {
            "name": "Social",
            "type": "social",
            "settings": [
                {
                    "type": "text",
                    "id": "fa",
                    "default": "far fa-lightbulb",
                    "label": "Font Awesome Code"
                },
                {
                    "type": "text",
                    "id": "url",
                    "label": "Social Link Url"
                }
            ]
        },
        {
            "name": "Accreditation",
            "type": "accreditation",
            "settings": [
                {
                    "type": "image_picker",
                    "id": "image",
                    "label": "Image"
                }
            ]
        }
    ]
}
{% endschema %}