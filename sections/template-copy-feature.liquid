<div class="mx-auto py-16 px-4 sm:py-64 sm:px-6 lg:px-8 bg-black">
    <h1 class="text-white">{{ section.settings.title }}</h1>
    <span class="text-yellow">{{  section.settings.sub-title }}</span>
    <div class="block">
        <span class="mb-4 xl:mb-0">{% render 'button-with-chevron', text: "SHOP NOW", url: section.settings.link, btn-style: "white", border-color: "border-green" %}</span>
    </div>
    {% if section.settings.hero_video %}
        <div class="absolute inset-0 overflow-hidden">
          <video autoplay muted loop playsinline class="w-full h-full object-cover">
            <source src="{{ section.settings.hero_video | file_url }}" type="video/mp4">
            Your browser does not support the video tag.
          </video>
        </div>
    {% endif %}
</div>

{% schema %}
{
    "name": "Copy Feature Section",
    "presets": [
        {
            "name": "Copy Feature Section"
        }
    ],
    "settings": [
        {
            "type": "text",
            "id": "title",
            "default": "Title",
            "label": "H1 Title"
        },
    ],
}
{% endschema %}